<h1>Login</h1>

<div class="form">
<% form_for @user_session, :url => user_sessions_path do |f| %>
	<p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  </p>
	<p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </p>
	<p>
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </p>
	<p>
  <%= f.submit "Login" %>  or <a href="<%= new_account_path %>">Register</a>
	</p>
<% end %>
</div>
