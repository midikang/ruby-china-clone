<%= form_for(@user,
    :url=>(@user.id.blank? ? cpanel_users_path : cpanel_users_path(@user.id)),
    :html => { :enctype =>  "multipart/form-data" } ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => "middle" %>
  </div>
  <div class="field">
    <%= f.label :passwd %><br>
    <%= f.password_field :passwd %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio, :class => "middle", :style => "height:60px;" %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  <% if !@user.avatar_file_name.blank? %>
    <div class="field">
      <%= f.label "Preview" %><br>
      <%= image_tag @user.avatar.url %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :verified %><br>
    <%= f.check_box :verified, :class => "checkbox" %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, User::STATE.collect { |s| [s[0], s[1]]} %>
  </div>
  <div class="field">
    <%= f.label :qq %><br>
    <%= f.text_field :qq %>
  </div>
  <div class="field">
    <%= f.label :last_logined_at %><br>
    <%= f.text_field :last_logined_at, :readonly=>true %>
  </div>
  <div class="field">
    <%= f.label :tagline %><br>
    <%= f.text_field :tagline, :class => "middle" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
