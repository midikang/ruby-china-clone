<%= form_for(@topic,
      :url =>(@topic.id.blank? ? cpanel_topics_path : cpanel_topic_path(@topic.id))
      ) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :node_id %><br>
    <%= f.select :node_id, Node.all.collect { |n| [n.name, n.id]} %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %><%= @topic.user.name if @topic.user %>
  </div>
  <div class="field">
    <%= f.label :last_reply_user_id %><br>
    <%= f.number_field :last_reply_user_id %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
