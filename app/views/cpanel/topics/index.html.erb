<% content_for :sitemap do %>
  <span class="current">帖子</span>
<% end %>
<h1>Listing Topics</h1>


<table class="grid">
  <tr class="head">
    <td class="first">Title</td>
    <td>Node</td>
    <td>User</td>
    <td>Replies count</td>
    <td>Last reply user</td>
    <td>Replied at</td>
    <td>Source</td>
    <td colspan="2">Action</td>
  </tr>

    <% @topics.each do |topic| %>
      <tr>
        <td class="first"><%= topic.title %></td>
        <td><%= topic.node.name if topic.node %></td>
        <td><%= topic.user.name if topic.user %></td>
        <td><%= topic.replies_count %></td>
        <td><%= topic.last_reply_user_id %></td>
        <td><%= topic.replied_at %></td>
        <td><%= topic.source %></td>
        <td><%= link_to 'Edit', edit_cpanel_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', cpanel_topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

