<p id="notice"><%= notice %></p>
<% content_for :sitemap do %>
  <span class="current">节点</span>
<% end %>
<h1>Listing Nodes</h1>

<table class="grid">
    <tr class="head">
      <td class="first">Name</td>
      <td>Section</td>
      <td>Sort</td>
      <td>Topics count</td>
      <td colspan="4"></td>
    </tr>

    <% @nodes.each do |node| %>
      <tr>
        <td class="first"><%= node.name %></td>
        <td><%= node.section.name %></td>
        <td><%= node.sort %></td>
        <td><%= node.topics_count %></td>
        <td><%= link_to 'Edit', edit_cpanel_node_path(node) %></td>
        <td><%= link_to 'Destroy', cpanel_node_path(node), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

